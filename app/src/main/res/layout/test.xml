<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BlockedNumbersText"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:focusable="true"
    android:gravity="start">

    <TextView
        android:id="@+id/blocked_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="李洁"
        android:textColor="#000000"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/blocked_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:layout_toLeftOf="@+id/delete_blocked_number"
        android:layout_toStartOf="@+id/delete_blocked_number"
        android:text="18510110645"
        android:textColor="#7C7C7C"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_marginRight="22dp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/delete_blocked_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:contentDescription="从黑名单中移除"

            android:src="@drawable/ic_close_grey_24dp"
            android:layout_alignParentRight="true"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#D0D0D0"/>
</RelativeLayout>